<div class="rounded bg-gray-custom p-8 w-10/12">
  <h1 class="text-white font-bold text-4xl">
    <code class="font-code"><%= error.title %></code>
  </h1>

  <div class="my-6">
    <h2 class="text-white font-bold text-2xl">Details</h2>
    <p class="text-white">
      <code class="font-code"><%= error.details %></code>
    </p>
  </div>

  <div>
    <h3 class="text-white font-bold text-xl">Solution</h3>
    <div class="text-white font-code rounded" data-controller="syntax-highlighter">
      <%= error.solution_converted.html_safe %>
    </div>
  </div>
</div>
