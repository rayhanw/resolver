<div class="w-full">
  <div class="flex justify-between items-center">
    <%= link_to "Back", root_path, class: "text-xl text-gray-custom hover:text-gray-500 dark:text-gray-light underline dark:hover:text-gray-200 transition-all duration-200" %>
    <%= link_to "Edit", edit_error_path(@error), class: "text-xl text-gray-custom hover:text-gray-500 dark:text-gray-light underline dark:hover:text-gray-200 transition-all duration-200" %>
  </div>
  <%= render partial: "card", locals: { error: @error } %>
  <p class="text-gray-custom dark:text-white mt-4 mb-8">
    Found this helpful?
    <%= link_to "Mark this resolver as helpful for everyone else to see", upvote_error_path(@error), class: "text-gray-custom dark:text-gray-light hover:text-gray-500 dark:hover:text-gray-200 underline transition-all duration-200", data: { 'turbo-method': 'patch' } %>
  </p>
</div>
